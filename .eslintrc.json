{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "jest"
  ],
  "rules": {
    "semi": ["error", "never"],
    "complexity": ["warn", { "max": 20 }],
    "eqeqeq": "error",
    "no-negated-condition": "error",
    "no-nested-ternary": "error",
    "no-unneeded-ternary": "error",
    "no-useless-computed-key": "error",
    "max-len": ["error", {
      "code": 120,
      "ignoreStrings": true,
      "ignoreComments": true,
      "ignoreUrls": true,
      "ignoreTemplateLiterals": true,
      "ignoreRegExpLiterals": true
    }]
  }
}
